<div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">
            Most popular books
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
      {{my-daterange-picker startDate=start endDate=end class="pull-left"}}
    </div>
    <div class="col-sm-6">
      {{pagination-limit limit=limit class="pull-right"}}
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
                <th>Authors</th>
                <th>Orders</th>
            </tr>
            </thead>
            <tbody>
            {{#each books as |book|}}
                <tr>
                    <td>{{#link-to 'store.book' book}}{{book.id}}{{/link-to}}</td>
                    <td>{{#link-to 'store.book' book}}{{book.title}}{{/link-to}}</td>
                    <td>{{#each book.authors as |author|}}{{#link-to 'store.author' author}}{{author.name}}{{/link-to}}  {{/each}}</td>
                    <td>{{book.sales}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{pagination-nav max=pagecount offset=offset limit=limit}}
