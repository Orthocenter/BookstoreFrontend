<div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">
            Popular books
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
      {{my-daterange-picker startDate=start endDate=end class="pull-left"}}
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
                <th>Authors</th>
                <th>Sales</th>
            </tr>
            </thead>
            <tbody>
            {{#each books as |book|}}
                <tr>
                    <td>{{book.id}}</td>
                    <td>{{book.title}}</td>
                    <td>{{#each book.authors as |author|}}{{author.name}}  {{/each}}</td>
                    <td>{{book.sales}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>

