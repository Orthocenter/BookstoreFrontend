<div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">
            Popular authors
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
      {{my-daterange-picker startDate=start endDate=end class="pull-left"}}
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Author id</th>
                <th>Author name</th>
                <th>Sales</th>
            </tr>
            </thead>
            <tbody>
            {{#each authors as |author|}}
                <tr>
                    <td>{{author.id}}</td>
                    <td>{{author.name}}</td>
                    <td>{{author.sales}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>

