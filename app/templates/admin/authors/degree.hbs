<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Two authors</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="inputAuthor1" class="col-sm-2 control-label">Author1</label>
                <div class="col-sm-9">
                  {{auto-complete _class="form-control" _id="inputAuthor1" _placeholder="Author1"
                  store=this.store modelName="author" term="name" value=author1}}
                </div>
            </div>

            <div class="form-group">
                <label for="inputAuthor2" class="col-sm-2 control-label">Author2</label>
                <div class="col-sm-9">
                  {{auto-complete _class="form-control" _id="inputAuthor2" _placeholder="Author2"
                  store=this.store modelName="author" term="name" value=author2}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-9">
                    <button {{action 'query'}} class="btn btn-primary" {{bind-attr disabled=hasNotTwoAuthors}}>Query</button>
                </div>
            </div>
        </form>
    </div>
</div>

{{#if result}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Result</h3>
        </div>
        <div class="panel-body">
            <p><strong>Degree:</strong> {{result.degree}}</p>
        </div>
    </div>
{{/if}}