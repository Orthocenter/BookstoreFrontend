<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Add a new author</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group has-success has-feedback">
                <label for="inputISBN" class="col-sm-3 control-label">Name</label>
                <div class="col-sm-8">
                    <!--<input type="text" class="form-control" id="inputISBN" placeholder="ISBN">-->
                  {{input type="text" class="form-control" id="inputName" placeholder="Name" value=name}}
                    <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
                    <span id="inputISBNStatus" class="sr-only">(success)</span>
                </div>
            </div>

            <div class="form-group">
                <label for="inputIntro" class="col-sm-3 control-label">Introduction</label>
                <div class="col-sm-8">
                  {{textarea class="form-control" rows="3" value=intro}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8">
                    <!--<button type="submit" class="btn btn-primary">Submit</button>-->
                    <button {{action 'submit'}} class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
