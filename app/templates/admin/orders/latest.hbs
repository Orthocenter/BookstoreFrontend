<div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">
            Latest Orders
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
      {{pagination-limit limit=limit class="pull-right"}}
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Time</th>
                <th>Customer</th>
                <th>Total Price</th>
            </tr>
            </thead>
            <tbody>

            {{#each orders as |order|}}
                <tr>
                    <th>{{order.id}}</th>
                    <td>{{order.time}}</td>
                    <td>{{order.customer.username}}</td>
                    <td>{{to-fixed fixed=2 num=order.totalPrice}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{pagination-nav max=pagecount offset=offset limit=limit}}
