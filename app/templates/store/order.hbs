<div class="container">
    <div class="page-header">
        <!--<div class="col-sm-8">-->
        <h2>Order #{{model.id}} <small>{{model.time}}</small></h2>
        <!--</div>-->
        <!--<h4 class="pull-right"><i class="glyphicon glyphicon-shopping-cart"></i></h4>-->
    </div>
    <div class="col-sm-12 book-main">
        <div class="row">
            <h3>Overview</h3>
            <p><strong>Total price:</strong> ￥ {{to-fixed num=model.totalPrice fixed=2}}</p>
            <p><strong>Address:</strong> {{model.address}}</p>

            <h3>Details</h3>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Unit Price ￥</th>
                    <th>Subtotal ￥</th>
                </tr>
                </thead>
                <tbody>
                {{#each model.orderItems as |item|}}
                    <tr>
                        <th>{{#link-to 'store.book' item.book}}{{item.book.id}}{{/link-to}}</th>
                        <td>{{#link-to 'store.book' item.book}}{{item.book.title}}{{/link-to}}</td>
                        <td>{{to-fixed num=item.amount fixed=2}}</td>
                        <td>{{to-fixed num=item.price fixed=2}}</td>
                        <td>{{a-mul-b a=item.amount b=item.price}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>