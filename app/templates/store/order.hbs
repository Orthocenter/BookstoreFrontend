<div class="container">
    <div class="page-header">
        <!--<div class="col-sm-8">-->
        <h2>Order #{{model.id}} <small>{{model.time}}</small></h2>
        <!--</div>-->
        <!--<h4 class="pull-right"><i class="glyphicon glyphicon-shopping-cart"></i></h4>-->
    </div>
    <div class="col-sm-12 book-main">
        <div class="row">
            <h3>Overview</h3>
            <p>Total price: </p>
            <p>Address: {{model.price}}</p>

            <h3>Details</h3>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Unit Price</th>
                </tr>
                </thead>
                <tbody>
                {{#each model.orderItems as |item|}}
                    <tr>
                        <th>{{#link-to 'store.book' item.book}}{{item.book.id}}{{/link-to}}</th>
                        <th>{{#link-to 'store.book' item.book}}{{item.book.title}}{{/link-to}}</th>
                        <th>{{item.amount}}</th>
                        <th>{{item.price}}</th>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>