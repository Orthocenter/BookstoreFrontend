<div class="container">
    <div class="page-header">
        <!--<div class="col-sm-8">-->
        <h2>Shopping Cart</h2>
        <!--</div>-->
        <!--<h4 class="pull-right"><i class="glyphicon glyphicon-shopping-cart"></i></h4>-->
    </div>
    <div class="col-sm-12 book-main">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Unit Price</th>
                </tr>
                </thead>
                <tbody>
                {{#each cart as |item|}}
                    <tr>
                        <td>{{#link-to 'store.book' item.book}}{{item.book.id}}{{/link-to}}</td>
                        <td>{{#link-to 'store.book' item.book}}{{item.book.title}}{{/link-to}}</td>
                        <td>{{item.amount}}</td>
                        <td>{{item.book.price}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>