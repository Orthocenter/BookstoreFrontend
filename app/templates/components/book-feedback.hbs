{{#if display}}
    <div class="feedback" style="margin-bottom: 15px">
        <div class="row">
            <div class="col-sm-1">
                <div class="btn-group-vertical btn-group-xs" role="group" aria-label="usefulness">
                  {{#if feedback.opinion}}
                      <button type="button" {{bind-attr class=":btn veryUseful:btn-primary:btn-default veryUseful::disabled"}}><i class="glyphicon glyphicon-backward" style="transform: rotate(90deg)"></i></button>
                      <button type="button" {{bind-attr class=":btn useful:btn-primary:btn-default useful::disabled"}}>
                          <i class="glyphicon glyphicon-triangle-top"></i>
                          <p>{{feedback.usefulness}}</p>
                      </button>
                      <button type="button" {{bind-attr class=":btn useless:btn-primary:btn-default useless::disabled"}}><i class="glyphicon glyphicon-triangle-bottom"></i></button>
                  {{else}}
                      <button type="button" class="btn btn-default" {{action 'assess' 2}}><i class="glyphicon glyphicon-backward" style="transform: rotate(90deg)"></i></button>
                      <button type="button" class="btn btn-default" {{action 'assess' 1}}><i class="glyphicon glyphicon-triangle-top"></i></button>
                      <button type="button" class="btn btn-default" {{action 'assess' -1}}><i class="glyphicon glyphicon-triangle-bottom"></i></button>
                  {{/if}}
                </div>
            </div>

            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-5">
                        <p><strong>{{#link-to 'store.customer' feedback.customer}}{{feedback.customer.username}}{{/link-to}} </strong>
                          {{print-date date=feedback.time format="YYYY-MM-DD HH:MM:SS"}}</p>
                    </div>
                    <div class="col-sm-7">
                        <!--<i class="glyphicon glyphicon-star"> </i>-->
                        <!--<i class="glyphicon glyphicon-star-empty"></i>-->
                      {{show-star-rating rating=feedback.score}}
                        <span>{{feedback.score}} / 10</span>
                    </div>
                </div>

                <p>{{feedback.comment}}</p>
            </div>
        </div>
    </div>
{{/if}}