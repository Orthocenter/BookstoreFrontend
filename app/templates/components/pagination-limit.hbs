<div class="btn-group">
    <button type="button" class="btn btn-default" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{limit}} records per page</button>
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu">
        {{#each options as |option|}}
            <li><a href="#" {{action 'select' option}}>{{option}} records per page</a></li>
        {{/each}}
    </ul>
</div>